<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GamesRadar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

        <!-- Set custom attributes -->
        <item name="headerColor">@color/headerColorDay</item>

    </style>

    <!-- Text appearance for headers in details page -->
    <style name="SubHeader" parent="@android:style/TextAppearance">
        <item name="android:textColor">?attr/headerColor</item>
        <item name="android:textSize">@dimen/text_subheader</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text appearance for large headers -->
    <style name="Header" parent="@android:style/TextAppearance">
        <item name="android:textColor">?attr/headerColor</item>
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>