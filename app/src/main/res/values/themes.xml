<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GamesRadar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy_med</item>
        <item name="colorPrimaryVariant">@color/navy_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/navy_med</item>
        <item name="colorSecondaryVariant">@color/navy_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

        <!-- Set custom attributes -->
        <item name="headerColor">@color/headerColorDay</item>
        <item name="bodyTextColor">@color/bodyTextColorDay</item>
        <item name="activity_bg_color">@color/activity_bg_color_day</item>
        <item name="android:textAppearanceSmall">@style/BodyText</item>

        <item name="cardBackgroundColor">@color/white</item>

    </style>

    <!-- Text appearance for headers in details page -->
    <style name="SubHeader" parent="@android:style/TextAppearance">
        <item name="android:textColor">?attr/headerColor</item>
        <item name="android:textSize">@dimen/text_subheader</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text appearance for large headers -->
    <style name="Header" parent="@android:style/TextAppearance">
        <item name="android:textColor">?attr/headerColor</item>
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyText" parent="@android:style/TextAppearance">
        <item name="android:textColor">?attr/bodyTextColor</item>
        <item name="android:textSize">@dimen/text_subheader</item>
    </style>
</resources>